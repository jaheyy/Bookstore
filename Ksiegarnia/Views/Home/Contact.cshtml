@{
    ViewData["Title"] = "Kontakt";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <section class="mt-4">
        <div class="d-flex justify-content-center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d18568.25486357223!2d18.557267061080086!3d54.427070934051685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46fda1aa031ccab3%3A0x35a12edff4e76824!2sKsi%C4%99garnia%20Ambelucja!5e0!3m2!1spl!2spl!4v1579708191975!5m2!1spl!2spl" width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
        </div>
    </section>
    <section class="row mt-5">
        <header class="col-12">
            <h2 class="mb-3">Skontaktuj się z nami</h2>
        </header>
        <div class="col-lg-8 mb-5">
            <form asp-action="SendMessage" id="contact-form">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" name="subject" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Temat'" placeholder="Temat" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <textarea class="form-control w-100" name="message" cols="30" rows="9" onfocus="this.placeholder=''" onblur="this.placeholder='Wpisz swoją wiadomość'" placeholder="Wpisz swoją wiadomość." style="resize:none"></textarea>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input class="form-control" name="name" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Twoje imie'" placeholder="Twoje imie" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input class="form-control" name="email" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Twój adres email'" placeholder="Twój adres email" />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group mt-2">
                            <button class="btn btn-outline-dark w-100">Wyślij</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-4">
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-home"></i>
                </span>
                <div class="media-body">
                    <h4>Sopot</h4>
                    <p>ul.Monte Cassino 23</p>
                </div>
            </div>
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-phone"></i>
                </span>
                <div class="media-body">
                    <h4>603 215 146</h4>
                    <p>Od poniedziałku do piątku 8:00 - 16:00</p>
                </div>
            </div>
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-at"></i>
                </span>
                <div class="media-body">
                    <h4>kontakt@ksiegarnia.pl</h4>
                    <p>Czekamy na twoją wiadomośc</p>
                </div>
            </div>
        </div>
    </section>
</div>